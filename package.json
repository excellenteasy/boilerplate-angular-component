{
  "name": "boilerplate-angular-component",
  "version": "1.0.0",
  "description": "An angular component boilerplate",
  "main": "index.js",
  "style": "index.css",
  "config": {
    "lrport": 35729,
    "port": 8080,
    "host": "0.0.0.0"
  },
  "scripts": {
    "ify": "browserify $npm_package_main -t brfs",
    "clean": "rm -rf dist && mkdir dist",
    "prebuild": "npm run clean",
    "build": "npm run ify -s > dist/${npm_package_name}.js",
    "predist": "npm run build",
    "dist": "npm run ify -s -- -t browserify-ngannotate | uglifyjs -c > dist/${npm_package_name}.min.js",
    "publish": "npm run dist",
    "test": "tape test.js | tap-spec",
    "watch": "onchange 'index.js' -- npm test",
    "watchify": "watchify $npm_package_main -t brfs -o dist/${npm_package_name}.js",
    "livereload": "lrhs -b -w example/index.html,index.css,index.js -l $npm_package_config_lrport",
    "open": "opener http://$npm_package_config_host:$npm_package_config_port/example",
    "serve": "npm run open -s & parallelshell 'npm run watchify -s' 'npm run livereload -s'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/excellenteasy/boilerplate-angular-component.git"
  },
  "keywords": [
    "angular",
    "ng",
    "directive"
  ],
  "author": "Stephan BÃ¶nnemann <stephan@excellenteasy.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/excellenteasy/boilerplate-angular-component/issues"
  },
  "homepage": "https://github.com/excellenteasy/boilerplate-angular-component",
  "devDependencies": {
    "brfs": "^1.2.0",
    "browserify": "^7.0.0",
    "browserify-ngannotate": "^0.4.0",
    "lr-http-server": "^0.1.1",
    "onchange": "0.0.2",
    "opener": "^1.4.0",
    "parallelshell": "^1.0.0",
    "serve-static": "^1.7.1",
    "tap-spec": "^2.1.1",
    "tape": "^3.0.3",
    "uglify-js": "^2.4.15",
    "watchify": "^2.1.1"
  }
}
